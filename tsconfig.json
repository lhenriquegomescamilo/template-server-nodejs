{
    "include": [
        "server/**/*.ts",
        "server/*.ts",
        "test/**/*.ts",
        "test/*.ts"
    ],
    "exclude": ["node_modules"],
    "buildOnSave": true,
    "compileOnSave": true,

    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "watch": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ]
    }
}